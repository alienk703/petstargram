                <a class="navbar-brand" href="/">PetStargram</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li class="page-scroll">
                        <%= link_to 'Cats', cat_index_path %>
                    </li>
                    <li class="page-scroll">
                       <%= link_to 'Dogs', dog_index_path %>
                    </li>
                    <li class="page-scroll">
                        <%= link_to 'Other Pets', other_index_path %>
                    </li>
                    <li class="page-scroll">
                        <a href="mailto:petstargram@gmail.com">Contact</a>
                    </li>
                    <li class="page-scroll">
                      <% if user_signed_in? %>
                      <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
                      <% else %>
                      <!-- LOG IN -->
                      <%= link_to "Log In", new_user_session_path%>
                    </li>  
                      <!-- SIGN UP -->
                    <li class="page-scroll">
                      <%= link_to "Sign Up", new_user_registration_path%>
                      <%end%>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>


<div class="dogs">
  <% @pet.where(:kind => "dog").order(followers: :desc).each do |d| %>
  <%= image_tag(d.image_url) %>
	<div class="dogfollow">
  	<p>Name: <%= d.name %></p>
  	<p>Followers: <%= d.followers %></p>
	<% end %>
	</div>
</div>

</body>

